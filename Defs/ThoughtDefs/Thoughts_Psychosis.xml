<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThoughtDef>
        <defName>PanicAttack</defName>
        <workerClass>PsychosisPlus.ThoughtWorker_PanicAttack</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>panic attack</label>
                <description>...</description>
                <baseMoodEffect>-30</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>PTSDTrauma</defName>
        <durationDays>0.5</durationDays>
        <thoughtClass>PsychosisPlus.Thought_PTSDTrauma</thoughtClass>
        <stackLimit>1</stackLimit>
        <stages>
            <li>
                <label>PTSD trauma</label>
                <description>please please please please</description>
                <baseMoodEffect>-20</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>PTSD</defName>
        <workerClass>PsychosisPlus.ThoughtWorker_PTSD</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>PTSD</label>
                <description>somethimes I remember the nightmare of that time.</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>Insomnia</defName>
        <workerClass>PsychosisPlus.ThoughtWorker_Insomnia</workerClass>
        <validWhileDespawned>true</validWhileDespawned>
        <stages>
            <li>
                <label>mild insomnia</label>
                <description>I'm tired.</description>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>serious insomnia</label>
                <description>I want to sleep.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>extreme insomnia</label>
                <description>I can't remember the last time I had a deep sleep..</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>painful insomnia</label>
                <description>Just somebody knock me out.. please..</description>
                <baseMoodEffect>-7</baseMoodEffect>
            </li>
        </stages>
  </ThoughtDef>
</Defs>